+	switch (cmd->cmd) {
+	case ETHTOOL_SRXFH:
+		return igc_ethtool_set_rss_hash_opt(adapter, cmd);
+	case ETHTOOL_SRXCLSRLINS:
+		return igc_ethtool_add_nfc_rule(adapter, cmd);
+	case ETHTOOL_SRXCLSRLDEL:
